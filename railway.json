{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "npm run start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30000
  },
  "variables": {
    "PORT": "3000",
    "NODE_ENV": "production"
  }
}
